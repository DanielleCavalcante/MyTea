@*
   estabelecer relação entre model e view
*@

@model Funcionario

@{
    ViewData["Title"] = "Criar registros de Funcionários";
}


<div class="container">
    <h1 class="titulo-view-crud" id="staticBackdropLabel">Cadastrar Funcionário</h1>

    <form asp-action="CriarFunc" method="post">
        <div class="modal-body modal-cadastrar-func">
            <label asp-for="Func_Nome" class="labels mb-2">Nome *</label>
            <div class="input-group mb-3">
                <input asp-for="Func_Nome" type="text" class="form-control conteudo-input" placeholder="Exemplo: Maria">
            </div>
        </div>

        <div class="modal-body modal-cadastrar-func">
            <label asp-for="Func_Sobrenome" class="labels mb-2">Sobrenome *</label>
            <div class="input-group mb-3">
                <input asp-for="Func_Sobrenome" type="text" class="form-control conteudo-input" placeholder="Exemplo: Santos">
            </div>
        </div>

        @*<div class="modal-body modal-cadastrar-func">
            <label class="labels mb-2">Data Nascimento *</label>
            <div class="input-group mb-3">
                <input type="text" class="form-control conteudo-input" placeholder="Exemplo: 19/05/2000">
            </div>
        </div>*@

        <div class="modal-body modal-cadastrar-func">
            <label class="labels mb-2">Gênero</label>
            <div class="input-group mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="flexRadioDefault">
                    <label class="form-check-label label-radio" id="label-radio" for="RadioFeminino">
                        Feminino
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="flexRadioDefault">
                    <label class="form-check-label label-radio" id="label-radio" for="RadioMasculino">
                        Masculino
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="flexRadioDefault">
                    <label class="form-check-label label-radio" id="label-radio" for="RadioOutro">
                        Outro
                    </label>
                </div>
            </div>
        </div>

        <div class="modal-body modal-cadastrar-func">
            <label asp-for="Func_DtAdm" class="labels mb-2">Data Admissão *</label>
            <div class="input-group mb-3">
                <input asp-for="Func_DtAdm" type="text" class="form-control conteudo-input" placeholder="Exemplo: 01/04/2023">
            </div>
        </div>

        <div class="modal-body modal-cadastrar-func">
            <label asp-for="Func_CH_Est" class="labels mb-2">Carga Horária *</label>
            <div class="input-group mb-3">
                <input asp-for="Func_CH_Est" type="text" class="form-control conteudo-input" placeholder="Exemplo: 8">
            </div>
        </div>

        <div class="modal-body modal-cadastrar-func">
            <label asp-for="Depto_Id" class="labels mb-2">Departamento *</label>
            <div class="input-group mb-3">
                <select class="seletor-funcionario form-select form-select-sm form-control">
                    <option selected>Selecione um departamento</option>
                    <option value="Tecnologia">Tecnologia</option>
                    <option value="Recursos Humanos">Recursos Humanos</option>
                    <option value="Contabilidade">Contabilidade</option>
                </select>
            </div>
        </div>
        <div class="modal-body modal-cadastrar-func">
            <label class="labels mb-2">Nível de Acesso *</label>
            <div class="input-group mb-3">
                <select class="seletor-funcionario form-select form-select-sm form-control">
                    <option selected>Selecione um nível de acesso</option>
                    <option value="1 - Administrador">1 - Administrador</option>
                    <option value="2 - Gerente">2 - Gerente</option>
                    <option value="3 - Funcionário">3 - Funcionário</option>
                </select>
            </div>
        </div>
        <div class="modal-footer">
            <button asp-area="" asp-controller="Funcionario" asp-action="Index"  type="submit" class="btn botao-cancelar">Cancelar</button>
            <button asp-action="CriarFunc" type="submit" value="Inserir" class="btn botao-padrao">Salvar</button>
        </div>
    </form>
</div>
