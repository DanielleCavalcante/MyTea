@model Funcionario

@{
    ViewData["Title"] = "Editar Funcionário";
}

<div class="d-flex justify-content-center align-items-center" style="height: max-content;">
    <div class="col-md-6 col-lg-4">
        <div class="card">
            <div class="card-header">
                <h1 class="modal-title fs-5">@ViewData["Title"]</h1>
            </div>
            <div class="card-body"
                <form method="post">
                    <div class="form-group">
                        <label asp-for="Func_Id" class="labels mb-2">Código</label>
                        <input readonly asp-for="Func_Id" class="form-control conteudo-input">
                    </div>
                    <div class="form-group">
                        <label asp-for="Func_Nome" class="labels mb-2">Nome *</label>
                        <input asp-for="Func_Nome" type="text" class="form-control conteudo-input" placeholder="Exemplo: Santos">
                    </div>
                    <div class="form-group">
                        <label asp-for="Func_Sobrenome" class="labels mb-2">Sobrenome *</label>
                        <input asp-for="Func_Sobrenome" type="text" class="form-control conteudo-input" placeholder="Exemplo: Santos">
                    </div>
                    <div class="form-group">
                        <label asp-for="Func_Gen" class="labels mb-2">Gênero</label>
                        <input asp-for="Func_Gen" type="text" class="form-control conteudo-input">
                    </div>
                    <div class="form-group">
                        <label asp-for="Func_Dt_Adm" class="labels mb-2">Data Admissão *</label>
                        <input asp-for="Func_Dt_Adm" type="date" class="form-control conteudo-input">
                    </div>
                    <div class="form-group">
                        <label asp-for="Func_CH_Est" class="labels mb-2">Carga Horária *</label>
                        <input asp-for="Func_CH_Est" type="number" class="form-control conteudo-input" placeholder="Exemplo: 8">
                    </div>
                    <div class="form-group">
                        <label asp-for="Depto_Id" class="labels mb-2">Departamento *</label>
                        <input asp-for="Depto_Id" type="number" class="form-control conteudo-input" placeholder="Exemplo: 1">
                    </div>
                    <div class="form-group">
                        <label asp-for="NAcesso_Id" class="labels mb-2">Nível de Acesso *</label>
                        <input asp-for="NAcesso_Id" type="number" class="form-control conteudo-input" placeholder="Exemplo: 2">
                    </div>

                    <div class="modal-footer">
                        <a asp-action="Index" class="btn botao-cancelar">Cancelar</a>
                        <input type="submit" value="Atualizar" class="btn botao-padrao"/>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

