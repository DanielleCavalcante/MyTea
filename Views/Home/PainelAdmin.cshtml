@{
    ViewData["Title"] = "Painel Admin";
}

<div id="painel-admin" class="container-fluid">

    @* Aba de navegação entre Departamento, WBS e Funcionários *@

    <section class="mt-4">
        <p class="mb-4">Funcionalidade selecionada:</p>
        <nav>
            <div class="nav nav-tabs" role="tablist">
                <button class="aba-navegacao nav-link active" id="nav-departamentos-tab" data-bs-toggle="tab" data-bs-target="#nav-departamentos" role="tab">
                    Departamento
                </button>
                <button class="aba-navegacao nav-link" id="nav-wbs-tab" data-bs-toggle="tab" data-bs-target="#nav-wbs" role="tab">
                    WBS
                </button>
                <button class="aba-navegacao nav-link" id="nav-funcionario-tab" data-bs-toggle="tab" data-bs-target="#nav-funcionario" role="tab">
                    Funcionários
                </button>
            </div>
        </nav>
    </section> 

    @* Visualização das funcionalidades de Departamento *@

    <div class="tab-content" id="nav-tabContent">
        <div class="tab-pane fade show active" id="nav-departamentos" role="tabpanel">
            <div class="container my-5 px-0">
                <div class="row">
                    <div class="col-md-9 col-12">
                        <h3 class="my-2">Buscar Departamento</h3>
                        <p class="mb-4">Busque um departamento por seu nome ou código</p>
                        <div class="row mt-3">
                            <div class="input mb-3 col-4 conteudo-input">
                                <input type="text" class="form-control" placeholder="Informe um nome ou código">
                            </div>
                            <div class="col-8">
                                <button type="button" class="btn botao-padrao">Buscar</button>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-12 d-flex justify-content-end">
                        <div class="col-8 my-3 ">
                            <button type="button" class="btn botao-padrao" data-bs-toggle="modal" data-bs-target="#botao-cadastrar-departamentos">Cadastrar Departamento</button>
                        </div>
                    </div>
                </div>


                @* Tabela para exibir dados do Departamento *@

                <p class="mt-5 mb-2">Lista de Departamentos cadastrados:</p>

                <div class="table-responsive">
                    <table class="table table-striped table-hover">                       
                        <thead class="cabeçalho-tabela">
                            <tr >
                                <th scope="col">Código</th>
                                <th scope="col">Departamento</th>
                                <th scope="col" colspan="2"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">1</th>
                                <td>Tecnologia</td>
                                <td colspan="2" class="d-flex justify-content-end hstack gap-2">
                                    <button type="button" class="btn botao-padrao" data-bs-toggle="modal" data-bs-target="#botao-editar-departamentos">Editar</button>
                                    <button type="button" class="btn botao-excluir" data-bs-toggle="modal" data-bs-target="#botao-excluir-departamentos">Excluir</button>
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">2</th>
                                <td>Recursos Humanos</td>
                                <td colspan="2" class="d-flex justify-content-end hstack gap-2">
                                    <button type="button" class="btn botao-padrao">Editar</button>
                                    <button type="button" class="btn botao-excluir">Excluir</button>
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">3</th>
                                <td>Contabilidade</td>
                                <td colspan="2" class="d-flex justify-content-end hstack gap-2">
                                    <button type="button" class="btn botao-padrao">Editar</button>
                                    <button type="button" class="btn botao-excluir">Excluir</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                @*                   
                FUNÇÃO CADASTRAR 
                Modal de exibição após pressionar o botão cadastrar novo departamento
